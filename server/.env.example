# API key for simple authentication. If empty or unset, auth is disabled.
API_KEY=

# Network binding
HOST=0.0.0.0
PORT=8000

# Timezone for window calculations and scheduling
TIMEZONE=Asia/Shanghai

# Retention of job runs and artifacts in days
RETENTION_DAYS=30

# Concurrency limit for job executions
CONCURRENCY_LIMIT=3

# Optional custom directories. Relative paths resolve next to the executable (or server/ in dev)
# STORAGE_DIR=storage
# LOG_DIR=logs

# MySQL connection for 95th percentile compute (recommended for production)
# If not set, the app will fallback to reading db_config.ini next to the executable
# MYSQL_HOST=127.0.0.1
# MYSQL_PORT=3306
# MYSQL_USER=
# MYSQL_PASSWORD=
# MYSQL_DB=
# MYSQL_CHARSET=utf8mb4

# Optional: MySQL connection for compute95 (if not using db_config.ini)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=
# MYSQL_PASSWORD=
# MYSQL_DB=
# MYSQL_CHARSET=utf8mb4
